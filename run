#!/bin/bash
# WF 2020-01-14

#
# show usage
#
usage() {
  echo "usage $0 [-h|--help] | [-w|--watch]"
  exit 1
}

which webpack > /dev/null
if [  $? -ne 0 ]
then
  echo "installing dependencies ..."
  npm install --save-dev 
fi
option="build"
for i in "$@"
do
  case $i in
    -h|--help)
      usage
      ;;
    -w|--watch)
      option="watch"
      ;;
  esac
done
npm run $option 
